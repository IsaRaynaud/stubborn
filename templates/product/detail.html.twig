{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <img
      src="{{ asset('uploads/products/' ~ product.image) }}"
      alt="{{ product.name }}"
      style="max-width: 300px;"
    >

    <p class="fw-bold fs-4 mt-3">
        {{ product.price|number_format(2, ',', ' ') }} €
    </p>

    {# Affiche la description si tu as ce champ dans l’entité #}
    {% if product.description is defined %}
        <p>{{ product.description|nl2br }}</p>
    {% endif %}

    <a href="{{ path('app_home') }}" class="btn btn-secondary mt-4">← Retour</a>
{% endblock %}