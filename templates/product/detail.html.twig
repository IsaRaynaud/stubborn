{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 text-center">
                <img src="{{ asset('uploads/images/' ~ product.imageFilename) }}"
                     alt="{{ product.name }}"
                     class="img-fluid rounded shadow-lg" />
            </div>

            <div class="col-md-6 d-flex flex-column justify-content-center">
                <h1>{{ product.name }}</h1>

                <p class="h3 text-primary fw-semibold">
                    {{ product.formattedPrice }}
                </p>

                {% set sizeOrder = ['XS','S','M','L','XL'] %}

                <h2 class="h5 mt-4 mb-2">Tailles disponibles</h2>

                <div class="d-flex flex-wrap gap-2">
                    {% for label in sizeOrder %}
                        <button
                            class="btn btn-outline-secondary"
                            type="button"
                            style="min-width:3.2rem"
                        >
                            {{ label }}
                        </button>
                    {% endfor %}
                </div>
                <button id="addToCartBtn"
        class="btn btn-primary mt-4"
        type="button"
        disabled>
    Ajouter au panier
</button>
                            </div>
                        </div>
                    </div>

    <a href="{{ path('app_home') }}" class="btn btn-secondary mt-4">‚Üê Retour</a>
{% endblock %}